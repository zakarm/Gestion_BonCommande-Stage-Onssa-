@model IEnumerable<Projet_Onssa_Web_Mvc.Models.OVSet>

@{
    ViewBag.Title = "Index";
}


<div style="padding:30px;">



    <br />
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Lecture Ordre de virement</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">

                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.NumOV)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.SousOrdonnateur)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.TresorierPayeur)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.InfoOP.NumOP)
                            </th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NumOV)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SousOrdonnateur)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TresorierPayeur)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InfoOP.NumOP)
                                </td>
                                <td>
                                    @Html.ActionLink("Export", "Export", new { id = item.IdOV })
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>
