@model IEnumerable<Projet_Onssa_Web_Mvc.Models.PVJSet>

@{
    ViewBag.Title = "Index";
}


<div style="padding:30px;">



    <br />
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Lecture procès verbal de jugement</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">

                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.DatePvj)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NumPvj)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.InfoConsultation.ObjetConsultation)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.InfoFournisseur.Nom)
                            </th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DatePvj)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NumPvj)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InfoConsultation.ObjetConsultation)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.InfoFournisseur.Nom)
                                </td>
                                <td>
                                    @Html.ActionLink("Export", "Export", new { id = item.IdPVJ })
                                </td>
                            </tr>
}
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>
